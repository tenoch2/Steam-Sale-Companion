<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Steam_Sale_Companion</groupId>
  <artifactId>Steam_Sale_Companion</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Steam Sale Companion</name>
  <description>companion for the steam sale experience</description>
  
  <!-- https://mvnrepository.com/artifact/com.thoughtworks.xstream/xstream -->
	<dependencies>
		<dependency>
    		<groupId>com.thoughtworks.xstream</groupId>
    		<artifactId>xstream</artifactId>
    		<version>1.4.9</version>
		</dependency>
		<dependency>
			<groupId>org.unbescape</groupId>
    		<artifactId>unbescape</artifactId>
    		<version>1.1.4.RELEASE</version>
		</dependency>
		<dependency>
    		<groupId>com.github.go-ive</groupId>
   		 	<artifactId>steam-api</artifactId>
   			 <version>5.0</version>
		</dependency>
		<dependency>
  			<groupId>org.jsoup</groupId>
  			<artifactId>jsoup</artifactId>
 			<version>1.10.2</version>
		</dependency>
		<dependency>
   			<groupId>com.github.koraktor</groupId>
    		<artifactId>steam-condenser</artifactId>
    		<version>1.3.9</version>
		</dependency>
    </dependencies>
  
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
    
  </build>
</project>